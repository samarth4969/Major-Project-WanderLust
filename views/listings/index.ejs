<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            margin-top: 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-evenly;
        }

        .filter {
            border: none;
            text-align: center;

            margin-left: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
        }



        .setting:hover {
            height: 50px;
            border: 2px solid black;
            border-radius: 10px;
            padding: 0px 30px 0px;
            opacity: 1;
        }

       .border1 {
    display: flex;
    align-items: center;
    gap: 10px;

    padding: 8px 14px;
    border-radius: 20px;

    background-color: #fff;
    border: 1px solid #ddd;

    transition: border-color 0.2s ease;
}

.border1:hover {
    border-color: #999;   /* simple grey hover */
}



        .tax-info {
            display: none;
        }
    </style>

    <body>
        <div id="filters">
            <div class="filter">
        <i class="fa-solid fa-building"></i>
        <p>Apartment</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-house"></i>
        <p>Villa</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-tree"></i>
        <p>Cottage</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-city"></i>
        <p>Flat</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Resort</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-house-user"></i>
        <p>Homestay</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <p>Farmhouse</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-water"></i>
        <p>Beach House</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountain Stay</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-gem"></i>
        <p>Luxury Stay</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-wallet"></i>
        <p>Budget Stay</p>
    </div>

    
           <!-- Tax toggle (keep this) -->
    <div class="form-check-reverse border1 filter form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">
            Display total before taxes
        </label>
    </div>

        </div>

        <!-- <h3><form method="get" action="/listings/new">
        <button>Create new post</button>
    </form></h3> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListing){ %>
                <a href="/listings/<%= listing._id %>" class="card-link">
                    <div class="card col listing-card">
                        <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap" style=" height:
                            18rem;">
                        <div class="card-body">
                            <p class="card-text-title">
                                <%= listing.title%>
                            </p>
                            <!-- <p class="card-text"><%= listing.description%></p> -->
                            <p class="card-text"><i class="fa fa-inr"></i>
                                <%= listing.price.toLocaleString("en-IN")%>/night
                                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                    <%}%>
        </div>



    </body>


    <script>
        let getswitch = document.getElementById("flexSwitchCheckDefault");

        console.log(getswitch);
        getswitch.addEventListener("click", () => {

            let element = document.getElementsByClassName("tax-info");
            // Iterate over the HTMLCollection


            for (info of element) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }


            }

        });


    </script>