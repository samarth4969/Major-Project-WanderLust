<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <!-- TITLE -->
      <h2 class="fw-bold mb-4"><%= listing.title %></h2>

      <!-- IMAGE -->
      <img
        src="<%= listing.image.url %>"
        class="img-fluid rounded-4 mb-4 show-img"
        alt="listing_image"
      />

      <!-- DETAILS -->
      <p class="text-muted mb-2">@ <%= listing.owner.username %></p>

      <p class="text-secondary mb-4"><%= listing.description %></p>

      <h4 class="fw-semibold mb-3">₹ <%= listing.price %> / night</h4>

      <p class="mb-1"><strong><%= listing.location %></strong></p>
      <p class="text-muted"><%= listing.country %></p>

      <!-- EDIT / DELETE -->
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="d-flex gap-3 my-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
          Edit
        </a>

        <form
          method="post"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>

      <hr class="my-4" />

      <!-- REVIEW FORM -->
      <% if (currUser) { %>
      <h3>Leave a Review</h3>

      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        class="needs-validation mt-3"
        novalidate
      >
        <label class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" name="review[rating]" value="1" required />
          <label title="Terrible">1 star</label>
          <input type="radio" name="review[rating]" value="2" />
          <label title="Not good">2 stars</label>
          <input type="radio" name="review[rating]" value="3" />
          <label title="Average">3 stars</label>
          <input type="radio" name="review[rating]" value="4" />
          <label title="Very good">4 stars</label>
          <input type="radio" name="review[rating]" value="5" />
          <label title="Amazing">5 stars</label>
        </fieldset>

        <div class="mt-3">
          <label class="form-label">Comment</label>
          <textarea
            class="form-control"
            rows="4"
            name="review[Comment]"
            required
          ></textarea>
        </div>

        <button class="btn btn-outline-danger mt-3">Submit</button>
      </form>

      <hr class="my-4" />
      <% } %>

      <!-- REVIEWS -->
      <% if (listing.reviews.length > 0) { %>
      <h4>All Reviews</h4>

      <div class="row mt-3">
        <% for (review of listing.reviews) { %>
        <div class="col-12 col-md-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h6>@<%= review.author.username %></h6>
              <p
                class="starability-result"
                data-rating="<%= review.rating %>"
              ></p>
              <p><%= review.Comment %></p>

              <% if (currUser) { %>
              <form
                method="POST"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              >
                <button class="btn btn-sm btn-dark mt-2">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>

      <!-- MAP -->
      <h4 class="mt-5 mb-3">Where you’ll be</h4>
      <div id="map" class="rounded-4 mb-4"></div>
    </div>
  </div>
</div>

<style>
  .show-img {
    width: 100%;
    max-height: 420px;
    object-fit: cover;
  }

  #map {
    width: 100%;
    height: 300px;
    border-radius: 10px;
  }

  @media (max-width: 768px) {
    #map {
      height: 250px;
    }
  }
</style>

<script src="/js/map.js"></script>
