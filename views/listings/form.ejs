<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-lg-9 col-md-10">
        <h2 class="mb-4">Host your place</h2>
        <form
          method="post"
          action="/listings"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mt-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              placeholder="Enter the Title"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter the Title</div>
            <div class="valid-feedback">Title looks good</div>
          </div>

          <div class="mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              placeholder="Enter the description"
              class="form-control"
              rows="4"
              required
            ></textarea>

            <div class="invalid-feedback">Description should be valid</div>
          </div>
          <div class="mt-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" class="form-control" />
          </div>

          <div class="mt-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              name="listing[price]"
              placeholder="Enter the price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="row mt-3">
            <div class="col-md-4">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                placeholder="Enter the country"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Country should be valid</div>
            </div>

            <div class="col-md-8">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                name="listing[location]"
                placeholder="Enter the Location"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Location should be Valid</div>
            </div>

            <div class="mt-3">
              <label for="category" class="form-label">Category</label>

              <select name="listing[category]" class="form-select" required>
                <option value="" disabled selected>Select Category</option>

                <option value="Apartment">Apartment</option>
                <option value="Villa">Villa</option>
                <option value="Cottage">Cottage</option>
                <option value="Flat">Flat</option>
                <option value="Resort">Resort</option>
                <option value="Homestay">Homestay</option>
                <option value="Farmhouse">Farmhouse</option>
                <option value="Beach House">Beach House</option>
                <option value="Mountain Stay">Mountain Stay</option>
                <option value="Luxury Stay">Luxury Stay</option>
                <option value="Budget Stay">Budget Stay</option>
              </select>

              <div class="invalid-feedback">Please select a category</div>
            </div>
          </div>
          <br />

          <button class="btn add-btn mt-4">Add</button>
        </form>
      </div>
    </div>
  </div>
</body>
